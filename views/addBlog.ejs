<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Add New Blog Page</title>
  </head>
  <body>
    <%- include("./partials/nav")%>
<div class="container mt-3">
    <form action="/blog" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="coverImage" class="form-label">Cover Image</label>
        <input type="file" name="coverImage" id="coverImage" class="form-control" aria-describedby="coverImage">
      </div>
            <label for="floatingTextarea2" class="form-label">Title</label>
        <div class="form-floating mb-3">
            <input type="text" placeholder="Add title" name="title" id="floatingTextarea2" class="form-control" aria-describedby="title">
            <label for="floatingTextarea2" class="text-secondary">Add Title</label>
          </div>
          <label for="floatingTextarea2" class="form-label">Body</label>
        <div class="form-floating mb-3">
          <!-- <label for="blody">Body</label> -->
          <textarea class="form-control" name="body" placeholder="Add body here." id="floatingTextarea2" style="height: 150px"></textarea>
          <label for="floatingTextarea2" class="text-secondary">Add Body Here</label>
        </div>
        <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>


    <%- include("./partials/scripts") %>
  </body>
</html>
