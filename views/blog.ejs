<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav")%>

    <div class="container mt-4">
      <h1><%= blog.title%></h1>
      <hr />
      <img
        src="<%= blog.coverImageURL%>"
        class="mt-2 rounded rounded-3 border border-light"
        width="300px"
      />
      <hr />
      <pre class="mt-2" style="white-space: pre-wrap; width: 100%">
<%= blog.body %></pre
      >
      <hr />
      <div class="container mt-4 py-3">
        <h4>Made By:</h4>
        <div class="d-flex text-align-center align-items-center">
        <a href=""><img src="<%= blog.createdBy.profileImageURL %>" width="70px" /></a>
        <a href="" class="text-decoration-none text-secondary-emphasis"><h6 class="fw-normal">@<%= blog.createdBy.fullName%></h6></a>
    </div>  
    </div>
    </div>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Enter your comment"
            />
            <button class="mt-1 w-100 btn btn-sm btn-primary" type="submit">Add Comment</button>
          </div>
        </form>
  
        <% } %>
        <div class="mt-3">
          <% comments.forEach(comment => { %>
            <div class="overflow-x-hidden p-2 border mb-4 d-flex flex-column border-1 rounded-3 border-dark-subtle">
          <div class="d-flex">
           <a href=""> <img src="<%= comment.createdBy.profileImageURL %>" width="60px" /></a>
           <a href="" class="text-decoration-none text-secondary-emphasis"> @<%= comment.createdBy.fullName %> :<br></a>
          </div>
          <div class="mx-5">
            <pre><%= comment.content %></pre>
          </div>
        </div>
          <% }) %>
        </div>
      </div>
    <%- include('./partials/scripts')%>
  </body>
</html>
